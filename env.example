# =============================================================================
# ZEUS NWC SERVER ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# ENVIRONMENT
ENV=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
HOST=0.0.0.0
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=admin
REDIS_DB=0
REDIS_POOL_SIZE=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Settings
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization

# Rate Limiting
MAX_REQUESTS_PER_IP=100
BURST_LIMIT=20

# IP Filtering
BLOCKED_IPS=
TRUSTED_PROXIES=127.0.0.1,::1

# Security Features
ENABLE_CORS=true
ENABLE_RATE_LIMIT=true
ENABLE_IP_FILTER=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
SERVICE_NAME=zeus-nwc-server
LOG_OUTPUT_PATH=
LOG_PRETTY_PRINT=true
LOG_COLORFUL=true

# =============================================================================
# Notification CONFIGURATION
# =============================================================================

APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=
APNS_KEY_PATH=
APNS_PRODUCTION=
APNS_ENABLED=